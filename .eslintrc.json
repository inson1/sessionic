{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:svelte/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"extraFileExtensions": [".svelte"],
		"project": ["./tsconfig.json"]
	},
	"overrides": [
		{
			"files": ["*.svelte"],
			"parser": "svelte-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser"
			}
		},
		{
			"files": ["*.ts", "*.svelte"],
			"rules": { "no-undef": "off" }
		}
	],
	"plugins": ["svelte", "@typescript-eslint"],
	"env": {
		"browser": true,
		"es2021": true
	}
}
