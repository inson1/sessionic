{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "paths": {
      "@constants/*": ["src/lib/constants/*"],
      "@components/*": ["src/lib/components/*"],
      "@stores/*": ["src/lib/stores/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@styles/*": ["src/styles/*"]
    },
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },

  "include": ["src", "scripts"]
}
